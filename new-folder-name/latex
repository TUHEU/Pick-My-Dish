\hline
\end{tabularx}
\end{table}

\subsection{Troubleshooting}
\begin{itemize}
    \item \textbf{App crashes}: Clear cache and restart
    \item \textbf{Login issues}: Reset password or check internet
    \item \textbf{Image upload fails}: Check file size and format
    \item \textbf{Slow performance}: Close background apps
\end{itemize}

